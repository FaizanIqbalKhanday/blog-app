<h1>articles listing pages</h1>
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>description</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article|%>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Delete', article_path(article), data: {turbo_method: :delete} %></td>
        </tr>
        <% end %>
    </tbody>
</table>